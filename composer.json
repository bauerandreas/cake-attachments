{
    "name": "cleptric/cake-attachments",
    "description": "File Attachments plugin for CakePHP",
    "type": "cakephp-plugin",
    "extra": {
        "installer-name": "Attachments"
    },
    "require": {
        "php": ">=5.4",
        "codekanzlei/cake-frontend-bridge": "1.0.*",
        "ext-imagick": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "cakephp/cakephp": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Attachments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Attachments\\": "src",
            "Attachments\\Test\\": "tests",
            "Attachments\\Test\\Fixture\\": "tests/Fixture"
        }
    }
}
