{
    "name": "codekanzlei/cake-attachments",
    "description": "File Attachments plugin for CakePHP",
    "type": "cakephp-plugin",
    "extra": {
        "installer-name": "Attachments"
    },
    "require": {
        "php": ">=7.1",
        "codekanzlei/cake-frontend-bridge": "~1.0",
        "ext-imagick": "*",
        "cakephp/cakephp": "~3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "cakephp/cakephp-codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Attachments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Attachments\\": "src",
            "Attachments\\Test\\": "tests",
            "Attachments\\Test\\Fixture\\": "tests/Fixture"
        }
    }
}
